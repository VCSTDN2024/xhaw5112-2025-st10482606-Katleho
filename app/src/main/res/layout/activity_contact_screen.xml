<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".ContactActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Company Logo" />

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:layout_marginBottom="20dp" />

        <!-- Company Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empowering the Nation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="123 Unity Street, Sandton, Johannesburg"
            android:textAlignment="center"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bryanston Gate Office Park,71 Homestead Ave,Bryanston,Sandton,2194"
            android:textColor="#666666"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allen's Nek,Roodepoort,1709"
            android:textColor="#666666"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View on Map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: +27 11 123 4567"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: info@empoweringthenation.co.za"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open: Mon - Fri, 8:00 AM - 5:00 PM"
            android:textColor="#777777"
            android:textStyle="italic"
            android:layout_marginBottom="24dp" />

        <!-- Social Media Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow us on"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:layout_marginBottom="16dp" />

        <!-- Social Media Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Instagram Button -->
            <Button
                android:id="@+id/btnInstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram"
                android:textColor="@android:color/white"
                android:backgroundTint="#E1306C"
                android:drawableStart="@drawable/outline_add_a_photo_24"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:layout_marginEnd="8dp"
                android:layout_margin="8dp" />
            <!-- TikTok Button -->
            <Button
                android:id="@+id/btnTikTok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TikTok"
                android:textColor="@android:color/white"
                android:backgroundTint="#000000"
                android:drawableStart="@drawable/outline_audio_file_24"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:layout_margin="8dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Back"
            android:background="@null"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>
