<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Your Courses"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textColor="@color/black" />

                <!-- Six-Month Courses -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Six-Month Courses"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black" />

                <!-- Example course with image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/firstaid" />

                    <CheckBox
                        android:id="@+id/cb_first_aid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Aid - R1500 Learn essential life-saving techniques and emergency response skills."
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/firstaid" />

                    <CheckBox
                        android:id="@+id/cb_landscaping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Landscaping- R1500 Design and maintain outdoor spaces with professional landscaping skills"
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sewing" />

                    <CheckBox
                        android:id="@+id/cb_sewing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sewing - R1500 Develop skills to design, alter, and repair clothing and textiles."
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/firstaid" />

                    <CheckBox
                        android:id="@+id/cb_lifeskills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Life Skills - R1500 Build essential personal and professional skills to thrive in everyday life"
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Add more six-month courses here... -->

                <!-- Six-Week Courses -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Six-Week Courses"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/childminding" />

                    <CheckBox
                        android:id="@+id/cb_child_minding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child Minding - R750 Learn childcare basics, safety, and educational play techniques."
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/cooking" />

                    <CheckBox
                        android:id="@+id/cb_cooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking- R750 Master culinary techniques and nutrition to create delicious meals."
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/gardenmaintenance" />

                    <CheckBox
                        android:id="@+id/cb_gardenmaintenance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Garden Maintenance - R750 Learn techniques for maintaining gardens and keeping them thriving year-round."
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Buttons -->
                <Button
                    android:id="@+id/btn_calculate_fees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculate Fees"
                    android:backgroundTint="@color/purple"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp" />

                <Button
                    android:id="@+id/btn_place_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Place Order"
                    android:backgroundTint="@color/purple"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Back"
        android:background="@null"
        android:textColor="@color/black" />

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        />

</androidx.drawerlayout.widget.DrawerLayout>
